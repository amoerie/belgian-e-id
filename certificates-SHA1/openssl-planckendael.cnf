HOME            = .
RANDFILE        = $ENV::HOME/.rnd

####################################################################
[ req ]
default_bits        = 2048
default_keyfile     = planckendaelkey.pem
distinguished_name  = planckendael_distinguished_name
req_extensions      = planckendael_req_extensions
string_mask         = utf8only

####################################################################
[ planckendael_distinguished_name ]
countryName         = Country Name (2 letter code)
countryName_default     = BE

stateOrProvinceName     = State or Province Name (full name)
stateOrProvinceName_default = Brussels

localityName            = Locality Name (eg, city)
localityName_default        = Brussels

organizationName            = Organization Name (eg, company)
organizationName_default    = VUB

commonName          = Common Name (e.g. server FQDN or YOUR name)
commonName_default      = PLANCKENDAEL

emailAddress            = Email Address
emailAddress_default        = planckendael@vub.be

domain            = Domain Name
domain_default        = default

####################################################################
[ planckendael_req_extensions ]

subjectKeyIdentifier        = hash
basicConstraints        = CA:FALSE
keyUsage            = digitalSignature, keyEncipherment
subjectAltName          = @alternate_names
nsComment           = "OpenSSL Generated Certificate"

####################################################################
[ alternate_names ]

DNS.1       = localhost

# IPv4 localhost
IP.1       = 127.0.0.1

# IPv6 localhost
IP.2     = ::1